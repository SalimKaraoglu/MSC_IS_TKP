@{
    ViewData["Title"] = "Assingned User To Role";
}
@model AssignedRoleDTO

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-dark">Rol Atama</h3>
            </div>
            <form asp-action="AssignedUser">
                <input type="hidden" asp-for="RoleName" />
                <input type="hidden" asp-for="Role" />
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-dark">Kullanıcıları Bu Role Ekle => <span class="badge">@Model.RoleName</span></h5>
                            <table class="table table-hover table-sm">
                                @if (Model.HasNotRole != null)
                                {
                                    @if (Model.HasNotRole.Count() == 0)
                                    {
                                        <tr>
                                            <td>Bütün Kullanıcılar Bu Role Sahip!</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var user in Model.HasNotRole)
                                        {
                                            <tr>
                                                <td>@user.UserName</td>
                                                <td>
                                                    <input type="checkbox" value="@user.Id" name="AddIds" />
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-dark">Kullanıcıları Bu Rolden Çıkar => <span class="badge">@Model.RoleName</span></h5>
                            <table class="table table-hover table-sm">
                                @if (Model.HasRole != null)
                                {
                                    @if (Model.HasRole.Count() == 0)
                                    {
                                        <tr>
                                            <td>Hiçbir kullanıcı bu role sahip değil!</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var user in Model.HasRole)
                                        {
                                            <tr>
                                                <td>@user.UserName</td>
                                                <td>
                                                    <input type="checkbox" value="@user.Id" name="DeleteIds" />
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between" style="height:50px;">
                    <a asp-action="Index" class="btn btn-outline-dark">Geri Dön</a>
                    <button type="submit" class="btn btn-outline-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
