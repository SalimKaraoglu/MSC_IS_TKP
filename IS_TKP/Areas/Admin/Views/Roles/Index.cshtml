@{
    ViewData["Title"] = "Roles Index";
}
@model List<IdentityRole>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h3 class="card-title text-dark">Rol Listesi</h3>
                <div class="ms-auto">
                    <a class="btn btn-outline-success" asp-action="CreateRole">Yeni Rol Ekle</a>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-responsive-md table-success">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Rol Adı</th>
                            <th>Kullanıcılar</th>
                            <th>Role Ata</th>
                            <th>Rolü Düzenle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                <td user-role="@role.Id">@role.Id</td>
                                <td>
                                    <a asp-action="AssignedUser" asp-route-id="@role.Id" class="btn btn-outline-primary">Ata</a>
                                </td>
                                <td>
                                    <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-outline-warning">Düzenle</a>
                                </td>
                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@role.Id">
                                        Sil
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal-@role.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Silme Uyarısı</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    @role.Name rolünü silmek istediğinize emin misiniz?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                    <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger">Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>

                            </tr>
                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
