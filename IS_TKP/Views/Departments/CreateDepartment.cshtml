@{
    ViewData["Title"] = "Create Department";
}
@model CreateDepartmentDTO

<div class="row">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Yeni Departman Ekle</h3>
        </div>
        <form asp-action="CreateDepartment">
            <div class="card-body">
                <div>
                    <label asp-for="DepartmentName" class="form-label"></label>
                    <input asp-for="DepartmentName" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="DepartmentDescription" class="form-label"></label>
                    <input asp-for="DepartmentDescription" class="form-control" />
                    <span asp-validation-for="DepartmentDescription" class="text-danger"></span>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between" style="height:50px;">
                    <a asp-action="Index" class="btn btn-outline-dark">Geri Dön</a>
                    <button type="submit" class="btn btn-outline-success">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>


