@{
    ViewData["Title"] = "Register";
}
@model RegisterDTO

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kayıt Ol</h3>
            </div>
            <form asp-action="Register">
                <div class="card-body">
                    <div>
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adı giriniz..."/>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="E-Mail giriniz..." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Şifre giriniz..." />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center" style="height:50px;">
                    <a asp-action="Login" class="text-secondary">Zaten bir hesabın varmı? Giriş Yap!</a>
                    <button type="submit" class="btn btn-outline-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>